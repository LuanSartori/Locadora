<%- include('paginas/_header'); -%>

<h1 class="ml-2">
  Clientes
</h1>
<div class="container">
<div class="row mt-5">
    <div class="col-md-7">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>Endereço</th>
                    <th>Telefone</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% if (data) { %>
                    <% for (var i = 0; i < data.length; i++) { %>
                        <tr>
                            <td><%= (i + 1) %></td>
                            <td><%= data[i].clienteNome %></td>
                            <td><%= data[i].clienteEnde %></td>
                            <td><%= data[i].clienteTel %></td>
                            <td>
                                <a href="/delete/<%= data[i].clienteID %>" class="btn btn-danger">Excluir</a>
                                <a href="/update/<%= data[i].clienteID %>" class="btn btn-info">Atualizar</a>
                            </td>
                        </tr>
                    <% } %>
                <% } %>
            </tbody>
        </table>
    </div>
    <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                <form action="/add" method="post">
                    <div class="form-group">
                        <input type="text" name="clienteNome" placeholder="Nome" class="form-control" >
                    </div>
                    <div class="form-group">
                        <input type="text" name="clienteEnde" placeholder="Endereco" class="form-control" >
                    </div>
                    <div class="form-group">
                        <input type="text" name="clienteTel" placeholder="Telefone" class="form-control" >
                    </div>
                    <div class="form-group">
                        <input type="text" name="clienteCPF" placeholder="CPF" class="form-control" >
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Salvar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

<%- include('paginas/_footer'); -%>