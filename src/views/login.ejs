<%- include('paginas/_header'); -%>

<div class="container">
    <h1 class="ml-2">
        Fa√ßa seu login
    </h1>
    <div class="card">
        <div class="card-body">
            <form action="/login" method="post">
                <div class="form-group">
                    <input type="text" name="usuarioLogin" placeholder="Nome" class="form-control" >
                </div>
                <div class="form-group">
                    <input type="text" name="usuarioSenha" placeholder="Senha" class="form-control" >
