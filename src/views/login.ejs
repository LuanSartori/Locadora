<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

    <link rel="stylesheet" href="css/login.css">
    
    <!-- HEAD -->
<%- include('components/_head'); -%>
    <!-- !HEAD -->

    <title>Locadora</title>
</head>
<body>
    <!-- HEADER -->
<%- include('components/_header_sem_perfil'); -%>
    <!-- !HEADER -->

    <section id="main-content">
        <div id="area-login">

            <form action="/login" method="post">
                <div class="form-group row">
                    <label for="inputEmail" class="col-sm-2 col-form-label">Login</label>
                    <div class="col-sm-10">
                        <input name="usuarioLogin" type="text" class="form-control" id="inputEmail" placeholder="Login">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputSenha" class="col-sm-2 col-form-label">Senha</label>
                    <div class="col-sm-10">
                        <input name="usuarioSenha" type="password" class="form-control" id="inputSenha" placeholder="Senha">
                    </div>
                </div>
                <div style="display: flex; justify-content: center;">
                    <button type="submit" class="btn btn-primary" style="align-self: center ;">Entrar</button>
                </div>
            </form>

            <% if (message) { %>
                <div class="alert alert-danger" role="alert" style="margin-top: 20px;">
                        <label style="color: red;"><%= message %></label>
                </div>
            <% } %>

        </div>
    </section>

    <!-- FOOTER -->
<%- include('components/_footer'); -%>
    <!-- !FOOTER -->
</body>
</html>
